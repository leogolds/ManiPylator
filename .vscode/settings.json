{
    // Python configuration
    "python.defaultInterpreterPath": "python",
    // Disable linting (just use Black for formatting)
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": false,
    // Black configuration
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "/home/leo/.pyenv/versions/3.10.16/bin/black",
    "black-formatter.args": [
        "--line-length=88"
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    // Jupyter notebook configuration
    "[jupyter]": {
        "editor.formatOnSave": true
    },
    // General editor settings for better Python development
    "editor.rulers": [
        88
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // File associations
    "files.associations": {
        "*.ipynb": "jupyter",
        "pyproject.toml": "toml",
        "*.cfg": "ini"
    },
    // Exclude patterns for file explorer
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/.ipynb_checkpoints": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.Trash-0": true,
        "**/simulavr.tgz": true
    },
    // Search exclude patterns
    "search.exclude": {
        "**/.git": true,
        "**/.ipynb_checkpoints": true,
        "**/__pycache__": true,
        "**/.ruff_cache": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.Trash-0": true,
        "**/simulavr.tgz": true,
        "**/manipylator_architecture.png": true
    },
    // Terminal configuration
    "terminal.integrated.cwd": "${workspaceFolder}",
    // Git configuration
    "git.ignoreLimitWarning": true,
    // Jupyter configuration
    "jupyter.interactiveWindow.textEditor.executeSelection": true,
    "jupyter.askForKernelRestart": false,
    // Notebook configuration
    "notebook.formatOnSave.enabled": true
}
